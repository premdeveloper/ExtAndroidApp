<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigatiobBarBG">

    <include
        android:id="@+id/llToolbar"
        layout="@layout/toolbar_login"></include>


    <ScrollView

        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llToolbar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/grey_popup_normal_15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_container"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="@string/personal_details" />


            <include
                android:id="@+id/include1"
                layout="@layout/line_complete"></include>


            <LinearLayout
                android:id="@+id/drawerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/include1"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edFirstName"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="First Name"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edLastName"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Last Name"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


                <include layout="@layout/line_15dp_left"></include>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edEmailId"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Email ID"
                        android:inputType="textEmailAddress"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>

                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edContactNO"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Contact No"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>

                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edNewPassword"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>

                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        android:id="@+id/edConfirmPassword"
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="Confirm New Password"
                        android:inputType="textPassword"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


            </LinearLayout>


            <!--  <include
                  android:id="@+id/include1"

                  layout="@layout/line_complete"></include>-->


            <TextView
                style="@style/grey_popup_normal_15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nav_header_container"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="@string/address"
                android:visibility="gone" />

            <include
                android:id="@+id/include2"
                layout="@layout/line_complete"></include>


            <LinearLayout
                android:id="@+id/drawerList2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/include2"
                android:background="@color/white"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="@string/city"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


                <include layout="@layout/line_15dp_left"></include>


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="@string/country"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>


                <include layout="@layout/line_15dp_left"></include>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <com.rey.material.widget.EditText
                        style="@style/Material.Widget.EditText.Light"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:hint="@string/postal_code"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1" />


                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/line_complete"></include>


        </LinearLayout>


    </ScrollView>


</RelativeLayout>