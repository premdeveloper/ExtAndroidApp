<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navigatiobBarBG">

    <LinearLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_bg"
        android:gravity="center"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgUserDrawer"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/user" />
        <TextView
            android:paddingTop="10dp"
            android:id="@+id/txtEmailDrawer"
            style="@style/white_normal_14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xyz@gmail.com"
            />

    </LinearLayout>

    <View
        android:id="@+id/dividerLineDrawerTop"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/nav_header_container"
        android:layout_marginTop="10dp"
        android:background="@color/dividerLine" />


    <ListView
        android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dividerLineDrawerTop"
        android:background="@color/white"

        android:divider="@null"
        android:dividerHeight="0dp" />

    <View
        android:id="@+id/dividerLineDrawerbottom"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@id/drawerList"
        android:background="@color/dividerLine" />

</RelativeLayout>