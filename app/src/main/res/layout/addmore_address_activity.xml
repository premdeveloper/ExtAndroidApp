<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_login" />
    </LinearLayout>

    <View
        android:id="@+id/divider0"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_below="@+id/headerLayout"
        android:background="@color/dividerLine" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/divider0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/dividerLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llFBGoogle"
                android:padding="15dp"
                android:src="@drawable/line_or"
                android:visibility="invisible" />

            <View
                android:id="@+id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/dividerLine"
                android:background="@color/dividerLine" />

            <LinearLayout
                android:id="@+id/llEditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:layout_centerHorizontal="true"
                android:background="@color/navigatiobBarBG"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edPincode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Pincode"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dividere1a"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llCategory"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edPhoneNo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Phone Number"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dividerCategory"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edFullName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Full Name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dividere1b"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edShippingAdd"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Shipping Address"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dividere1cs"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llCity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edCity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="City"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>
                <View
                    android:id="@+id/dividere1c"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edState"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="State"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>

                <View
                    android:id="@+id/dividere1d"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:background="@color/dividerLine" />

                <LinearLayout
                    android:id="@+id/llConPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edlandmark"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="Landmark"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:textSize="13dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/llEditText"
                android:background="@color/dividerLine" />

            <!-- <com.android.droozo.util.CircleI -->
            <!-- android:id="@+id/takeImg" -->
            <!-- android:layout_width="80dp" -->
            <!-- android:layout_height="80dp" -->
            <!-- android:layout_below="@+id/divider2" -->
            <!-- android:layout_gravity="center" -->
            <!-- android:background="@drawable/splash_bg" -->
            <!-- android:paddingLeft="15dp" -->
            <!-- android:paddingRight="15dp" -->
            <!-- android:paddingTop="10dp" -->
            <!-- android:scaleType="centerCrop" /> -->



            <View
                android:layout_marginTop="25dp"
                android:id="@+id/divider3"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/lltakeImg"
                android:background="@color/dividerLine" />

            <RelativeLayout
                android:id="@+id/llterms"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:background="@color/navigatiobBarBG"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="Set as default address" />

                <ToggleButton
                    android:id="@+id/togglebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:checked="true"
                    android:textColorHighlight="@color/green_bg"
                    android:textOff="NO"
                    android:textOn="YES" />
            </RelativeLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@+id/llterms"
                android:background="@color/dividerLine" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>